{
  "compilerOptions": {
    "target": "es5",
    "module": "ES2022",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": [
    "**/*.ts"    // Include all TypeScript files in the project
  ],
  "exclude": [
    "node_modules"  // Exclude node_modules
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
  }
}
